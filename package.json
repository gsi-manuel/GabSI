{
  "name": "ts-nodejs-express-webpack",
  "version": "0.1.0",
  "description": "Project node-express ",
  "main": "./dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "webpack --mode production --config config/webpack.config.js",
    "dev-build": "webpack --mode development --config config/webpack.config.js",
    "dev-start": "yarn run dev-build && node ./dist/index.js",
    "start": "nodemon",
    "start:debug": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "keywords": [
    "typescript.",
    "webpack",
    "nodejs",
    "express"
  ],
  "author": "gsi-manuel",
  "license": "MIT",
  "dependencies": {
    "@types/socket.io": "^2.1.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.19.0",
    "husky": "^3.0.1",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^9.2.0",
    "mongoose": "^5.6.5",
    "prettier": "^1.18.2",
    "q": "^1.5.1",
    "socket.io": "^2.2.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typegoose": "^5.8.1",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.15",
    "@types/mongoose": "^5.5.9",
    "@types/node": "^12.6.8",
    "@types/supertest": "^2.0.8",
    "@types/webpack": "^4.4.0",
    "dotenv": "^8.0.0",
    "jest": "^24.8.0",
    "mongoose-middleware": "^1.0.0",
    "nodemon": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,md}": [
      "prettier --write --print-width 120 --single-quote --tab-width 2 --trailing-comma all --no-bracket-spacing",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src/"
    ],
    "exec": "yarn dev-start",
    "ext": "ts"
  }
}
